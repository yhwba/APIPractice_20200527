<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignUpActivity"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="이메일양식으로 입력바랍니다." />

            <Button
                android:id="@+id/idCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="중복확인" />

        </FrameLayout>

        <TextView
            android:id="@+id/idCheckeResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복검사를 해주세요"
            android:textColor="#A0A0A0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/pwEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="비밀번호입력 (8자 이상)"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/pwCheckResultTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 입력해주세요" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="비밀번호확인" />

        <EditText
            android:id="@+id/pwRepeatEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="비밀번호를 다시 입력해주세요" />

        <TextView
            android:id="@+id/pwrepeatCheckResultTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호확인을 입력해주세요" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="닉네임" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/nickNameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="닉네임을 입력하세요(한글가능)" />

            <Button
                android:id="@+id/nickNameCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="중복확인" />


        </FrameLayout>
        <TextView
            android:id="@+id/nickNameCheckResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 중복 확인을 하세요" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/signUpBtn"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입" />


    </LinearLayout>
</layout>
